# Configuración de LLM Services para el proyecto geoespacial

# LLM Provider por defecto (simulation, openai, anthropic)
LLM_DEFAULT_PROVIDER=simulation

# Configuración de caché
LLM_CACHE_ENABLED=true
LLM_CACHE_DURATION=24
LLM_RATE_LIMIT=30
LLM_SIMULATION_ENABLED=true

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_VERIFY_SSL=true

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=2048
ANTHROPIC_TIMEOUT=30
ANTHROPIC_VERIFY_SSL=true

# Configuración de Weather API (ya existente)
WEATHER_API_KEY=your-openweather-api-key-here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_API_TIMEOUT=10
WEATHER_API_UNITS=metric
WEATHER_API_LANG=es
WEATHER_API_VERIFY_SSL=true
